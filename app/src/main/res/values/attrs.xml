<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ProgressProfileView">
        <attr name="max" format="float" />
        <attr name="progress" format="float" />
        <attr name="backgroundRingSize" format="dimension" />
        <attr name="progressRingSize" format="dimension" />
        <attr name="backgroundRingColor" format="color|reference" />
        <attr name="progressRingColor" format="color|reference" />
        <attr name="progressGradient" format="reference" />
        <attr name="joinGradient" format="boolean" />
        <attr name="gradientFactor" format="float" />
        <attr name="progressRingOutline" format="boolean" />
        <attr name="progressRingCorner">
            <enum name="ROUND" value="1" />
        </attr>
    </declare-styleable>
    <!-- Declare custom theme attributes that allow changing which styles are
         used for button bars depending on the API level.
         ?android:attr/buttonBarStyle is new as of API 11 so this is
         necessary to support previous API levels. -->
    <declare-styleable name="ButtonBarContainerTheme">
        <attr name="metaButtonBarStyle" format="reference" />
        <attr name="metaButtonBarButtonStyle" format="reference" />
    </declare-styleable>

    <declare-styleable name="AppTheme">

        <!-- region Button -->
        <attr name="ButtonText" format="reference" />
        <attr name="ButtonOrange" format="reference" />
        <attr name="ButtonRounded" format="reference" />
        <attr name="ButtonRoundedLight" format="reference" />
        <attr name="ButtonRoundedGreen" format="reference" />
        <attr name="ButtonRoundedDashed" format="reference" />
        <attr name="TextButton" format="reference" />
        <attr name="ButtonTextOrange" format="reference" />
        <!-- endregion -->

        <!-- region Text -->
        <attr name="TextHeadline" format="reference" />
        <attr name="TextTitle" format="reference" />
        <attr name="TextTitleTransparent" format="reference" />
        <attr name="TextTitleBold" format="reference" />
        <attr name="TextTitleBoldOrange" format="reference" />
        <attr name="TextSubtitle" format="reference" />
        <attr name="TextSubtitleTransparent" format="reference" />
        <attr name="TextSubtitleBold" format="reference" />
        <attr name="TextBody" format="reference" />


    </declare-styleable>


    <declare-styleable name="CircularProgressBar">

        <!-- Renamed attribute name to progress to progressValue -->
        <!-- For explanation see: https://stackoverflow.com/a/47753465/7356355 -->
        <attr name="progressValue" format="integer" />
        <attr name="maxProgress" format="integer" />
        <attr name="progressColor" format="color" />
        <attr name="progressWidth" format="dimension" />

        <attr name="progressBackgroundWidth" format="dimension" />
        <attr name="progressBackgroundColor" format="color" />

        <!--<attr name="textColor" format="color"/>
        <attr name="textSize" format="dimension"/>-->
        <attr name="startAngle" format="integer|reference" />

        <attr name="enableBackgroundDashEffect" format="boolean" />
        <attr name="showDot" format="boolean" />

        <attr name="dotWidth" format="dimension" />

        <attr name="animationDuration" format="integer" />

        <attr name="progressCap" format="enum">
            <enum name="round" value="0" />
            <enum name="flat" value="1" />
        </attr>

        <attr name="interpolator" format="enum">
            <enum name="linear" value="0" />
            <enum name="accelerate" value="1" />
            <enum name="decelerate" value="2" />
        </attr>

    </declare-styleable>

</resources>